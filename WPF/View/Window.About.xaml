<Window xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ZAR.WPF.WindowAbout" ShowInTaskbar="False"
				Height="240" Width="240" ResizeMode="NoResize"
				Title="About...">
  <Grid Margin="8">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="100*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" VerticalAlignment="Stretch">
      <Label Name="lblApp" HorizontalContentAlignment="Center" FontSize="18" FontWeight="Bold" />
      <Label Name="lblVer" HorizontalContentAlignment="Center" FontSize="10" FontWeight="Bold" />
    </StackPanel>
    <Button Grid.Row="1" Width="72" HorizontalAlignment="Center" IsCancel="True" IsDefault="True" Click="Button_OK_Click">OK</Button>
  </Grid>
</Window>